{
  "name": "@jswork/styled-atomics",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "nohoist": [
      "**/jest/**",
      "**/jest"
    ]
  },
  "devDependencies": {
    "lerna": "^3.22.1"
  },
  "scripts": {
    "start": "cd ./packages/sites && yarn start",
    "build": "lerna run build --no-private",
    "publish": "npm run build && lerna publish --no-private --no-tag"
  }
}
